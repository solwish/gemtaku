
<h1>Listing Shops</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Content</th>
      <th>Region</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shops.each do |shop| %>
      <tr>
        <td><img src="<%= shop.avatar.thumb %>" alt="포스터가 없습니다"></td>
        <td><%= shop.title %></td>
        <td><%= shop.content %></td>
        <td><%= shop.region %></td>
        <td><%= link_to 'Show', shop %></td>
        <td><%= link_to 'Edit', edit_shop_path(shop) if can? :edit, @shop %></td>
        <td><%= link_to 'Destroy', shop, method: :delete, data: { confirm: 'Are you sure?' } if can? :destroy, @shop %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Shop', new_shop_path if can? :create, Shop %>

<%= paginate @shops %>
