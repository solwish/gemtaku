    </div>
  <%# end %>

  <div class="field">
    <%= f.label :address %><br>
    <%= f.text_area :address %>
  </div>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content %>
  </div>
  <div class="field">
    <%= f.label :region %><br>
    <%= select(:shop, :region, [['홍대', "홍대"], ['신촌', "신촌"], ['건대', "건대"], ['강남', "강남"]]) %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
