
<h1>Listing Escapes</h1>

<table>
  <thead>
    <tr>
      <th>#</th>
      <th>User</th>
      <th>Title</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @escapes.reverse.each do |escape| %>
      <tr>
        <td><%= escape.id %></td>
        <td><%= escape.user.nickname %></td>
        <td><%= escape.title %></td>
        <td><%= link_to 'Show', escape %></td>
        <td><%= link_to 'Edit', edit_escape_path(escape) %></td>
        <td><%= link_to 'Destroy', escape, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Escape', new_escape_path %>

<% content_for :script do %>

  <%= paginate @escapes, remote: true %>
<% end %>
