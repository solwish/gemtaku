
<h1>Listing Escapes</h1>

<table>
  <thead>
    <tr>
      <th width="10%">글번호</th>
      <th width="60%">제목</th>
      <th width="10%">닉네임</th>
      <th width="20%">글쓴시간</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody id="escape-list">
    <% @escapes.each do |escape| %>
      <tr>
        <td><br><%= escape.id %></td>
        <td><br><%= link_to escape.title, escape %></td>
        <td><br><%= escape.user.nickname %></td>
        <td><br><%= escape.created_at.strftime('%a, %d %b %Y %H:%M:%S')%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '<i class = "glyphicon glyphicon-pencil"></i>New Escape'.html_safe, new_escape_path, class: 'btn btn-info' %>

<% content_for :script do %>
  <%#= paginate @escapes %>
<% end %>

<% content_for :script do %>
  <script>
    $(document).ready(function() {
      var page_count = 2;
      setInterval(function() {
        if($(window).scrollTop() >= $(document).height() - $(window).height() - 1) {
          $.ajax({
            url: '/escapes/page',
            method: 'GET',
            data: {
              page: page_count++
            }
          })
        }
      }, 3000);
    })
  </script>
<% end %>
