      <h2><%= pluralize(@escape.errors.count, "error") %> prohibited this escape from being saved:</h2>

      <ul>
      <% @escape.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field row">
    <div class="col-md-1 col-sm-1">
      <%= f.label :title %><br>
